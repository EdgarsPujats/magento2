<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Magebit\PageListWidget\Block\Widget\PageList" id="magebit_pagelistwidget_pagelist">
        <label>Name of widget</label>
        <description>description of widget</description>

<!--        A list of widget's options-->
        <parameters>
            <parameter name="title" xsi:type="text" required="false" visible="true" sort_order="10">
                <label>Title</label>
            </parameter>

            <parameter name="size" xsi:type="select" visible="true" required="true" sort_order="20">
                <label translate="true">Size</label>
                <options>
                    <option name="s" value="S">
                        <label>S</label>
                    </option>
                    <option name="m" value="M" selected="true">
                        <label>M</label>
                    </option>
                    <option name="l" value="L">
                        <label>L</label>
                    </option>
                </options>
            </parameter>

        </parameters>

<!--        A list of layout containers, where the widget may be injected-->
<!--        <containers>-->
<!--            ...-->
<!--        </containers>-->
    </widget>
</widgets>
